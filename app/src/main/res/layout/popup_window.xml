<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_window"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/data_margin"
    android:background="@drawable/popup_shape"
    android:orientation="vertical">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/progressBarPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        style="@style/EditTextView"
        android:id="@+id/cashTenderText"
        android:drawableLeft="@drawable/canada"
        android:drawableStart="@drawable/canada"
        android:visibility="gone"/>

</LinearLayout>
