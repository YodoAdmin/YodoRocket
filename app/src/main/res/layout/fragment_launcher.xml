<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:weightSum="2"
    android:orientation="horizontal"
    tools:context="yodo.co.yodolauncher.main.LauncherActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/operationsPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="@drawable/green_background"
            android:orientation="vertical" >

            <Button
                android:id="@+id/b500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="@string/coins_5"
                android:textSize="@dimen/text_size_buttons"
                android:onClick="valuePressed" />

            <Button
                android:id="@+id/b1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/coins_10"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_buttons"
                android:onClick="valuePressed" />

            <Button
                android:id="@+id/b2000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/coins_20"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_buttons"
                android:onClick="valuePressed" />

            <Button
                android:id="@+id/b5000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="valuePressed"
                android:text="@string/coins_50"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_buttons" />

            <Button
                android:id="@+id/b10000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="valuePressed"
                android:text="@string/coins_100"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_buttons" />

            <Button
                android:id="@+id/b20000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:onClick="valuePressed"
                android:text="@string/coins_200"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_buttons" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/companyLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/desc"
                android:layout_weight="0.25"
                android:src="@drawable/no_image" />

            <ImageView
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/desc"
                android:onClick="resetPressed"
                android:layout_weight="0.25"
                android:src="@drawable/refresh" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/gray"
                android:orientation="vertical" >

                <!-- line 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="?android:attr/selectableItemBackground"
                    android:weightSum="3" >

                    <Button
                        android:id="@+id/b7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:onClick="valuePressed"
                        android:text="@string/value_7"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers" />

                    <Button
                        android:id="@+id/b8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:onClick="valuePressed"
                        android:text="@string/value_8"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers" />

                    <Button
                        android:id="@+id/b9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:onClick="valuePressed"
                        android:text="@string/value_9"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers" />
                </LinearLayout>

                <!-- line 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="?android:attr/selectableItemBackground"
                    android:weightSum="3" >

                    <Button
                        android:id="@+id/b4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_4"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valuePressed" />

                    <Button
                        android:id="@+id/b5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_5"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valuePressed" />

                    <Button
                        android:id="@+id/b6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_6"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valuePressed" />
                </LinearLayout>

                <!-- line 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="?android:attr/selectableItemBackground"
                    android:weightSum="3" >

                    <Button
                        android:id="@+id/b1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_1"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valuePressed" />

                    <Button
                        android:id="@+id/b2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_2"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valuePressed" />

                    <Button
                        android:id="@+id/b3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_3"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valuePressed" />
                </LinearLayout>

                <!-- line 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="?android:attr/selectableItemBackground"
                    android:weightSum="3" >

                    <Button
                        android:id="@+id/b0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_0"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valuePressed" />

                    <Button
                        android:id="@+id/b00"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_00"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers_00"
                        android:onClick="valuePressed" />

                    <Button
                        android:id="@+id/bDot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_."
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valuePressed" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
