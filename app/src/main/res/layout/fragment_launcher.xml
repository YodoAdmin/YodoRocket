<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:weightSum="2"
    android:orientation="horizontal"
    android:baselineAligned="false"
    tools:context="yodo.co.yodolauncher.main.LauncherActivity$PlaceholderFragment">

    <!-- Information Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <!-- Top -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center_horizontal">

            <!-- Labels -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    style="@style/LabelTextView"
                    android:textStyle="bold|italic"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/total_purchase"/>

                <TextView
                    style="@style/LabelTextView"
                    android:text="@string/cash_tender" />

                <TextView
                    style="@style/LabelTextView"
                    android:text="@string/cash_back"/>

                <!-- end Labels -->
            </LinearLayout>

            <!-- Text Fields -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@style/EditTextView"
                    android:id="@+id/totalText"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:onClick="totalTextPressed"/>

                <TextView
                    style="@style/EditTextView"
                    android:id="@+id/paidText"
                    android:drawableLeft="@drawable/mexico"
                    android:onClick="paidTextPressed"/>

                <TextView
                    style="@style/EditTextView"
                    android:id="@+id/cashBackText"
                    android:onClick="cashBackTextPressed"/>

                <!-- end Text Fields -->
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:text="@string/balance"
                android:textSize="@dimen/text_size_values"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/balanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text=""
                android:textSize="@dimen/text_size_values"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="backPressed"
                android:src="@drawable/back"
                android:contentDescription="@string/desc" />

            <ImageView
                android:id="@+id/yodoLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="payPressed"
                android:layout_weight="1"
                android:src="@drawable/yodo_gear"
                android:contentDescription="@string/desc" />

        </LinearLayout>
    </LinearLayout>
    <!-- End Information Layout -->

    <!-- Operations Layout -->
    <LinearLayout
        android:id="@+id/operationsPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="@drawable/green_background"
            android:orientation="vertical" >

            <Button
                android:id="@+id/b500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/material_button"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/coins_5"
                android:textSize="@dimen/text_size_buttons"
                android:onClick="valueClick" />

            <Button
                android:id="@+id/b1000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/material_button"
                android:layout_margin="10dp"
                android:text="@string/coins_10"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_buttons"
                android:onClick="valueClick" />

            <Button
                android:id="@+id/b2000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/material_button"
                android:layout_margin="10dp"
                android:text="@string/coins_20"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_buttons"
                android:onClick="valueClick" />

            <Button
                android:id="@+id/b5000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/material_button"
                android:layout_margin="10dp"
                android:text="@string/coins_50"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_buttons"
                android:onClick="valueClick"/>

            <Button
                android:id="@+id/b10000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/material_button"
                android:layout_margin="10dp"
                android:text="@string/coins_100"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_buttons"
                android:onClick="valueClick"/>

            <Button
                android:id="@+id/b20000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/material_button"
                android:layout_margin="10dp"
                android:text="@string/coins_200"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_buttons"
                android:onClick="valueClick"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/companyLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/desc"
                android:layout_weight="0.25"
                android:src="@drawable/no_image" />

            <ImageView
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/desc"
                android:onClick="resetClick"
                android:layout_weight="0.25"
                android:src="@drawable/refresh" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/gray"
                android:orientation="vertical" >

                <!-- line 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="?android:attr/selectableItemBackground"
                    android:weightSum="3" >

                    <Button
                        android:id="@+id/b7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_7"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valueClick"/>

                    <Button
                        android:id="@+id/b8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_8"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valueClick"/>

                    <Button
                        android:id="@+id/b9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_9"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valueClick"/>
                </LinearLayout>

                <!-- line 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="?android:attr/selectableItemBackground"
                    android:weightSum="3" >

                    <Button
                        android:id="@+id/b4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_4"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valueClick" />

                    <Button
                        android:id="@+id/b5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_5"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valueClick" />

                    <Button
                        android:id="@+id/b6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_6"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valueClick" />
                </LinearLayout>

                <!-- line 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="?android:attr/selectableItemBackground"
                    android:weightSum="3" >

                    <Button
                        android:id="@+id/b1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_1"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valueClick" />

                    <Button
                        android:id="@+id/b2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_2"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valueClick" />

                    <Button
                        android:id="@+id/b3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_3"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valueClick" />
                </LinearLayout>

                <!-- line 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="?android:attr/selectableItemBackground"
                    android:weightSum="3" >

                    <Button

                        android:id="@+id/b0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_0"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valueClick" />

                    <Button
                        android:id="@+id/b00"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_00"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers_00"
                        android:onClick="valueClick" />

                    <Button
                        android:id="@+id/bDot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/yellow_button"
                        android:text="@string/value_."
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_numbers"
                        android:onClick="valueClick" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- End Operations Layout -->

</LinearLayout>
