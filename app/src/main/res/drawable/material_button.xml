<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:left="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="@color/primary_dark_material_dark" />
                </shape>
            </item>

            <item android:bottom="5dp" android:right="5dp">
                <shape>
                    <gradient
                        android:angle="270"
                        android:endColor="@color/primary_dark_material_light"
                        android:startColor="@color/primary_dark_material_light" />

                    <stroke
                        android:width="1dp"
                        android:color="@color/primary_dark_material_light" />

                    <corners
                        android:radius="4dp" />

                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:left="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="@color/primary_dark_material_light" />
                </shape>
            </item>

            <item android:bottom="5dp" android:right="5dp">
                <shape>
                    <gradient
                        android:angle="270"
                        android:endColor="@color/primary_material_light"
                        android:startColor="@color/primary_material_light" />

                    <stroke
                        android:width="1dp"
                        android:color="@color/primary_material_light" />

                    <corners
                        android:radius="4dp" />

                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>