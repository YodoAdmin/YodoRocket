<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#f3ae1b" />

            <stroke
                android:width="1dp"
                android:color="#bb6008" />

            <corners
                android:radius="10dp" />

            <padding
                android:left="@dimen/padding_calc_text"
                android:top="@dimen/padding_calc_text"
                android:right="@dimen/padding_calc_text"
                android:bottom="@dimen/padding_calc_text" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#f3ae1b"
                android:endColor="#bb6008"
                android:angle="270" />

            <stroke
                android:width="1dp"
                android:color="#bb6008" />

            <corners
                android:radius="10dp" />

            <padding
                android:left="@dimen/padding_calc_text"
                android:top="@dimen/padding_calc_text"
                android:right="@dimen/padding_calc_text"
                android:bottom="@dimen/padding_calc_text" />
        </shape>
    </item>
</selector>